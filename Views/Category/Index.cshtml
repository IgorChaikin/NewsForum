@using NewsForum.Models.ObjModels
@model IEnumerable<Category>
@{
    ViewBag.Title = "Список категорий"; ;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <a asp-action="EditForm">Добавить категорию</a>

    <table class="table">
        <tr><th>Название</th><th>Описание</th><th></th></tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Title</td>
                <td>@category.Desc</td>
                <td>
                    @if (category.News.ToList().Count == 0)
                    {
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </table>
</body>
</html>